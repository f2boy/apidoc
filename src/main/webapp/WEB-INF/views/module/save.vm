<div>

  <p class="text-center">
    #if ($type == 'MODULE')
            添加模块
    #elseif ($type == 'FUNCTION')
            添加菜单
    #else
            添加模块
    #end
  </p>

  <form id="inputForm" class="form-horizontal" action="#springUrl('')/module/save" method="post">
  <input type="hidden" name="id" value="$!module.id" />
    <input type="hidden" name="type" value="$type" />
    <input type="hidden" name="parentId" value="$!parentId" />
    <div class="form-group">
      <label for="moduleName" class="col-sm-5 control-label">名称</label>

      <div class="col-sm-3">
        <input type="text" class="form-control" id="moduleName" name="moduleName" placeholder="" value="$!module.moduleName" />
      </div>
    </div>
    <div class="form-group">
      <label for="code" class="col-sm-5 control-label">编码</label>

      <div class="col-sm-3">
        <input type="text" class="form-control" id="code" name="code" value="$!module.code" />
      </div>
    </div>
    <div class="form-group">
      <label for="remark" class="col-sm-5 control-label">说明</label>

      <div class="col-sm-3">
        <input type="text" class="form-control" id="remark" name="remark" value="$!module.remark" />
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-3">
        <button id="submit_btn" type="submit" class="btn btn-default">提交</button>
      </div>
    </div>
  </form>
</div>

<script type="text/javascript">

  $(document).ready(function () {
    $('#moduleName').focus();
  });

</script>
